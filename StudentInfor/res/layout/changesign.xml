<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/abc_ab_solid_light_holo"
        android:gravity="center_vertical" >

        <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:onClick="back_before" >

            <ImageView
                android:id="@+id/arraw"
                android:layout_width="24dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:src="@drawable/actionbar_dark_back_icon" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/actionbar_dark_logo_icon" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_toRightOf="@id/layout"
            android:gravity="center_vertical"
            android:text="个性签名"
            android:textSize="16sp" />

        <Button
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/bt_bg"
            android:text="保存"
            android:onClick="updatesign"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />
    </RelativeLayout>

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
    
    <EditText
        android:id="@+id/newsign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="30"
        android:paddingRight="50dp"
        android:textSize="18sp"/>
    <TextView 
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:text="0/30"
        android:layout_alignBottom="@id/newsign"
        android:layout_alignRight="@id/newsign"
        />
    </RelativeLayout>
    
</LinearLayout>