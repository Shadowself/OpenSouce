<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/abc_ab_solid_light_holo"
        android:gravity="center_vertical" >

        <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:onClick="back_before" >

            <ImageView
                android:id="@+id/arraw"
                android:layout_width="24dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:src="@drawable/actionbar_dark_back_icon" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/actionbar_dark_logo_icon" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_toRightOf="@id/layout"
            android:gravity="center_vertical"
            android:text="选择地区"
            android:textSize="16sp" />
    </RelativeLayout>
    
    <ListView 
        android:id="@+id/shengfen"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scrollbars="none"
        android:listSelector="@drawable/layout_change_bg"
        >
        
    </ListView>

</LinearLayout>
