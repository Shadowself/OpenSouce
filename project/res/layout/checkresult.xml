<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ground"
    android:orientation="vertical" >


        <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="#b0e0e6"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/back_surface"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentLeft="true"
            android:background="#87ceeb"
            android:text="☜ 返回"
            android:onClick="back_surface"
            android:textColor="#fff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/gonghao1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:text="工号"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

        

        <TextView
            android:id="@+id/danhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#f0ffff"
            android:textSize="20sp"
            android:ems="10" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:padding="30dp"
            android:textColor="#0000FF"
            android:text="扫描结果单号"
            android:textSize="30sp" />

        <Button
            android:id="@+id/wrong"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_alignBaseline="@+id/sure"
            android:layout_alignBottom="@+id/sure"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:onClick="back_surface"
            android:background="#CD5C5C"
            android:text="有错重扫" />

        <Button
            android:id="@+id/sure"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="14dp"
            android:layout_toLeftOf="@+id/wrong"
            android:background="#98FB98"
            android:text="扫描结果正确" />

</RelativeLayout>