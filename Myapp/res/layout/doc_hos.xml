<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ground2"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/back_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:onClick="back_main"
            android:src="@drawable/back_before" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#FFFFFF"
            android:text="名院名医"
            android:textSize="25sp" />
        
        <Button
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:onClick="tohos_choose"
            android:layout_marginRight="10dp"
            android:text="筛选"
            android:background="@drawable/person_bg"
            android:textColor="#1874CD"
            android:textSize="15sp" />
    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/bottomlist"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/fone"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/butt_choose1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="1dp"
                android:text="推荐名院"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:background="#20B2AA"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ftwo"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/butt_choose2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="1dp"
                android:text="重点专科"
                android:background="#87CEFF"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />
        </LinearLayout>

       <LinearLayout
            android:id="@+id/fthree"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/butt_choose3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="1dp"
                android:text="名医大全"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:background="#87CEFF"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />
        </LinearLayout>
 
    </LinearLayout>
    
    <!-- 动态显示界面 -->

    <LinearLayout
        android:id="@+id/fbody"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.90"
        android:orientation="vertical" >
    </LinearLayout>
    
    <RelativeLayout
        android:id="@+id/bott"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20sp"
            android:onClick="to_order"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/small_order"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:src="@drawable/small_hos_doc"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="to_collected"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20sp"
            android:src="@drawable/small_collect"/>
    </RelativeLayout>

</LinearLayout>
