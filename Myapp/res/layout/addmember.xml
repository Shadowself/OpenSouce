<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ground3"
    android:orientation="vertical" >
    
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:onClick="back_before"
            android:src="@drawable/back_before" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#FFFFFF"
            android:text="添加成员"
            android:textSize="25sp" />
    </RelativeLayout>
    
     <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="34dip"
        android:layout_marginRight="34dip">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="姓        名: "
            android:textColor="#1874CD"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/mname"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:textColor="#1874CD"
            android:background="@drawable/person_bg"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/text1" />
    </RelativeLayout>
    
     <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dip"
        android:layout_marginRight="34dip"
        android:layout_marginTop="20dp"  >

        <RadioGroup
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/rg"
	        android:orientation="horizontal">
	        
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性        别: "
                android:textColor="#1874CD"
                android:textSize="20sp"/>
	          <RadioButton
	              android:id="@+id/checkboy"
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:layout_marginLeft="10dp"
	              android:text="男"
	              android:textSize="20sp"
	              android:textColor="#1874CD"
	              android:checked="true"/>
	          <RadioButton
	              android:id="@+id/checkgirl"
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:layout_marginLeft="20dp"
	              android:textColor="#1874CD"
	              android:textSize="20sp"
	              android:text="女"/>
	      </RadioGroup>

    </RelativeLayout>

   <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dip"
        android:layout_marginRight="34dip"
        android:layout_marginTop="20dp" >

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="手机号码: "
            android:textColor="#1874CD"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/mphone"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:inputType="phone"
            android:maxLength="11"
            android:background="@drawable/person_bg"
            android:layout_alignParentRight="true"
            android:textColor="#1874CD"
            android:layout_toRightOf="@id/text2" />
    </RelativeLayout>
    
   <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dip"
        android:layout_marginRight="34dip"
        android:layout_marginTop="20dp" >

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="身份证号: "
            android:textColor="#1874CD"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/mid"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:maxLength="18"
            android:singleLine="true"
            android:textColor="#1874CD"
            android:background="@drawable/person_bg"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/text3" 
            android:saveEnabled="true"/>
        
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dip"
        android:layout_marginRight="34dip"
        android:layout_marginTop="20dp"  >

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="成员关系: "
            android:textColor="#1874CD"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/fship"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:textColor="#1874CD"
            android:background="@drawable/person_bg"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/text4" />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dip"
        android:layout_marginRight="34dip"
        android:layout_marginTop="20dp"  >
        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="出生日期: "
            android:textColor="#1874CD"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:inputType="date"
            android:background="@drawable/person_bg"
            android:layout_alignParentRight="true"
            android:hint="如：1991-12-06"
            android:textColor="#1874CD"
            android:layout_toRightOf="@id/text5" />
    </RelativeLayout>

    <Button 
        android:onClick="add_sure"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp" 
        android:background="@drawable/button_bg" 
        android:text="完成"
        android:textColor="#1874CD"
        android:textSize="24sp"
        />

</LinearLayout>
