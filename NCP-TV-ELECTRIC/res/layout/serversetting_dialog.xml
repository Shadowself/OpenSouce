<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@color/screenDefault"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp" >
    
    
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/netpath_setting"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:textSize="16sp"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp" >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:text="@string/building1"
            android:textColor="@color/black"
            android:textSize="16sp" />
         <EditText
            android:id="@+id/buildName1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/input_selector"
            android:maxLength="21"
            android:padding="5dp"
            android:inputType="number"
            android:textColor="@color/black"
            android:textColorHint="@color/color_dark_grey"
            android:textSize="16sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:text="@string/building2"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/buildName2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/input_selector"
            android:maxLength="21"
            android:padding="5dp"
            android:inputType="number"
            android:textColor="@color/black"
            android:textColorHint="@color/color_dark_grey"
            android:textSize="16sp" />
        
        </LinearLayout>    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginRight="20dp"
            android:layout_weight="2"
            android:text="@string/serverAddress1"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etIP1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/input_selector"
            android:maxLength="21"
            android:padding="5dp"
            android:inputType="number"
            android:text="192"
            android:textColor="@color/black"
            android:textColorHint="@color/color_dark_grey"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:text="."
            android:textColor="@color/black"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/etIP2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/input_selector"
           android:inputType="number"
            android:maxLength="21"
             android:text="168"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/color_dark_grey"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
             
            android:text="."
            android:textColor="@color/black"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/etIP3"
           android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/input_selector"
             android:inputType="number"
            android:maxLength="21"
            android:padding="5dp"
            android:text="50"
            android:textColor="@color/black"
            android:textColorHint="@color/color_dark_grey"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:text="."
            android:textColor="@color/black"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/etIP4"
           android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/input_selector"
            android:inputType="number"
            android:maxLength="21"
            android:text="188"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/color_dark_grey"
            android:textSize="16sp" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginRight="20dp"
            android:layout_weight="2"
            android:text="@string/serverAddress2"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etIP5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/input_selector"
            android:maxLength="21"
            android:padding="5dp"
            android:inputType="number"
            android:textColor="@color/black"
            android:textColorHint="@color/color_dark_grey"
            android:textSize="16sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:text="."
            android:textColor="@color/black"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/etIP6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/input_selector"
           android:inputType="number"
            android:maxLength="21"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/color_dark_grey"
            android:textSize="16sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:text="."
            android:textColor="@color/black"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/etIP7"
           android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/input_selector"
             android:inputType="number"
            android:maxLength="21"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/color_dark_grey"
            android:textSize="16sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:text="."
            android:textColor="@color/black"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/etIP8"
           android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/input_selector"
            android:inputType="number"
            android:maxLength="21"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/color_dark_grey"
            android:textSize="16sp" />
        
    </LinearLayout>
  <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
           android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp" >
        <TextView 
            android:id="@+id/remindMsg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/color_dark_grey"
            android:textSize="16sp" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="10dp" >

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_weight="1.0"
            android:background="@drawable/btn_selector"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/btnBack"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <View
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:layout_weight="0.5" />

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_weight="1.0"
            android:background="@drawable/btn_selector"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/btnConfirm"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>